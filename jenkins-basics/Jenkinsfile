pipeline {
    agent {label 'docker-agent'}
    tools { gradle 'gradle-8.6'}
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning sub-directory of main repository...'
                script {
                    git 'https://github.com/AugustoKlaic/Java-Series.git'
                    sh 'git submodule update --init --recursive jenkins-basics'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'cd jenkins-basics && gradle clean test'
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
                sh 'cd jenkins-basics && gradle clean build -x test '
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }

    post {
        success {
            echo 'Build and Deploy succeeded!'
        }
        failure {
            echo 'Build or Deploy failed!'
        }
    }
}
