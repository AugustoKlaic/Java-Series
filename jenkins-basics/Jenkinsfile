pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning sub-directory of main repository...'
                script {
                    git 'https://github.com/AugustoKlaic/Java-Series.git'
                    sh 'git submodule update --init --recursive jenkins-basics'
                }
            }
        }
        stage('Prepare Gradle') {
            steps {
                echo 'Ensuring gradle wrapper exists...'
                sh 'ls -lah'
                sh 'cd jenkins-basics && chmod +x gradlew && ./gradlew wrapper --gradle-version 8.0'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'cd jenkins-basics && ./gradlew clean build'
            }
        }
    }
}
